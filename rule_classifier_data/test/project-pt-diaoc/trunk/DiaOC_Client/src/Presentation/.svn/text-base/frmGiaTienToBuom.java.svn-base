    private void LoadData(){
        try
        {
            RSCall.GiaTienQCToBuomRSc toBuom = new GiaTienQCToBuomRSc();
            ArrayList<Entities.GIATIEN_TOBUOM> lst = toBuom.GetAllRows();
            DefaultTableModel dtm = new DefaultTableModel(){
                @Override
                public boolean isCellEditable(int x,int y){
                    return false;
                }
            };
            dtm.addColumn("STT");
            dtm.addColumn("Mã Giá tiền");
            dtm.addColumn(java.util.ResourceBundle.getBundle("Presentation/" + frmMain.resource).getString("quantity"));
            dtm.addColumn(java.util.ResourceBundle.getBundle("Presentation/" + frmMain.resource).getString("cost"));
            String s = "";
            for(int i=0;i<lst.size();i++)
            {
                Vector _v = new Vector();
                Entities.GIATIEN_TOBUOM _b = lst.get(i);
                _v.add(i+1);
                _v.add(_b.getMaGiaTien());
                _v.add(_b.getSoLuong());
                _v.add(_b.getGiaTien());
                dtm.addRow(_v);
            }
            this.tblGiaToBuom.setModel(dtm);
            this.tblGiaToBuom.getColumnModel().getColumn(0).setPreferredWidth(10);
            this.tblGiaToBuom.getColumnModel().getColumn(1).setPreferredWidth(30);
        }
        catch(Exception e)
        {
            JOptionPane.showMessageDialog(this, e.toString());
        }
    }

