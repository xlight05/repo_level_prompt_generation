    private void btnAddActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnAddActionPerformed
        // TODO add your handling code here:
        String soLuong = tbxSoLuong.getText().trim();
        String giaTien = tbxGiaTien.getText().trim();
        
        if(soLuong.isEmpty()){
            JOptionPane.showMessageDialog(this, java.util.ResourceBundle.getBundle("Presentation/" + frmMain.resource).getString("chuanhapsoluong"));
        }else if(giaTien.isEmpty()){
            JOptionPane.showMessageDialog(this, java.util.ResourceBundle.getBundle("Presentation/" + frmMain.resource).getString("chuanhapgiatien"));
        }else{
            Float giaTienToBuom = Float.MIN_VALUE;
            int soLuongToBuom = 0;
            try{
                RSCall.GiaTienQCToBuomRSc giaToBuom = new GiaTienQCToBuomRSc();
                soLuongToBuom = Integer.parseInt(soLuong);
                giaTienToBuom = Float.parseFloat(giaTien);
                giaToBuom.Insert(soLuongToBuom, giaTienToBuom);                
                this.LoadData();
                tbxSoLuong.setText("");
                tbxGiaTien.setText("");
                JOptionPane.showMessageDialog(this, java.util.ResourceBundle.getBundle("Presentation/" + frmMain.resource).getString("insertarecord"));
            }
            catch(Exception e)
            {
                JOptionPane.showMessageDialog(this, e.toString());
            }
        }

    }//GEN-LAST:event_btnAddActionPerformed

    private void btnUpdateActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnUpdateActionPerformed
        String soLuong = tbxSoLuong.getText().trim();
        String giaTien = tbxGiaTien.getText().trim();
        if(this.tblGiaToBuom.getSelectedRow()==-1){
            JOptionPane.showMessageDialog(this, java.util.ResourceBundle.getBundle("Presentation/" + frmMain.resource).getString("mustselectGiaTien"));
        }if(soLuong.isEmpty()){
            JOptionPane.showMessageDialog(this, java.util.ResourceBundle.getBundle("Presentation/" + frmMain.resource).getString("chuanhapsoluong"));
        }else if(giaTien.isEmpty()){
            JOptionPane.showMessageDialog(this, java.util.ResourceBundle.getBundle("Presentation/" + frmMain.resource).getString("notentercost"));
        }else{
            Float giaTienToBuom = Float.MIN_VALUE;
            int soLuongToBuom = 0;
            try{
                RSCall.GiaTienQCToBuomRSc giaToBuom = new GiaTienQCToBuomRSc();
                soLuongToBuom = Integer.parseInt(soLuong);
                giaTienToBuom = Float.parseFloat(giaTien);
                String maGiaTien = tblGiaToBuom.getValueAt(tblGiaToBuom.getSelectedRow(), 1).toString();
                giaToBuom.Update(maGiaTien, soLuongToBuom, giaTienToBuom);
                this.LoadData();
                tbxSoLuong.setText("");
                tbxGiaTien.setText("");
                JOptionPane.showMessageDialog(this, java.util.ResourceBundle.getBundle("Presentation/" + frmMain.resource).getString("updatedToBuom"));
            }
            catch(Exception e)
            {
                JOptionPane.showMessageDialog(this, e.toString());
            }
        }
    }//GEN-LAST:event_btnUpdateActionPerformed

