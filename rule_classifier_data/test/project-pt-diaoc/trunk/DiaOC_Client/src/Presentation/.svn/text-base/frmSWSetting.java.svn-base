    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_jButton1ActionPerformed
        String h = jTextField1.getText().trim();
        String p = jTextField2.getText().trim();
        
        if(Utilities.Utilities.checkService(h, p)){
            try{
                Utilities.Utilities.host = h;
                Utilities.Utilities.port = p;
                FileReader fr = new FileReader("config.dat");
                
                BufferedReader input = new BufferedReader(fr);
                String ui = input.readLine();
                String lang = input.readLine();
                
                FileOutputStream fos = new FileOutputStream("config.dat", false);
                PrintWriter pw= new PrintWriter(fos);
                pw.println(ui);
                pw.println(lang);
                pw.println(h);
                pw.println(p);
                pw.close();
            }catch(IOException e){
            }
            this.setVisible(false);
            frmLogin frm = new frmLogin();
            frm.setVisible(true);
            this.dispose();
        }else{
            JOptionPane.showMessageDialog(this, "Kết nối không thành công, thử lại");
        }
    }//GEN-LAST:event_jButton1ActionPerformed

