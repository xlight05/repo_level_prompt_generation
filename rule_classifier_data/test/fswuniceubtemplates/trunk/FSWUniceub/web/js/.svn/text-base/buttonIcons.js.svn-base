function buttonIcons(){
    $("a.procurar").button({
        icons: {
            primary: 'ui-icon-gear'
        }
    });
    $("a.excluir , a.apagar").button({
        icons: {
            primary: 'ui-icon-trash'
        }
    });
    $("a.novo , a.incluir, a.adicionar, a.ativar").button({
        icons: {
            primary: 'ui-icon-plus'
        }
    });
    $('a.editar, a.alterar').button({
        icons: {
            primary: "ui-icon-pencil"
        }
    });
    $("a.limpar ,a.limpaLV").button({
        icons:{
            primary: 'ui-icon-cancel'
        }
    });
    $("a.excel").button({
        icons: {
            primary: 'ui-icon-document-b'
        }
    });
    $("a.consultar, a.filtrar, a.pesquisa, a.filtrarLV, a.lv, a.listar").button({
        icons: {
            primary: 'ui-icon-search'
        }
    });
    $("a.pdf").button({
        icons: {
            primary: 'ui-icon-document-b'
        }
    });
    $("a.associar").button({
        icons: {
            primary: 'ui-icon-transferthick-e-w'
        }
    });

    $("a.importar").button({
        icons: {
            primary: 'ui-icon-folder-open'
        }
    });
    $("a.detalhar").button({
        icons: {
            primary: 'ui-icon-pencil'
        }
    });
    $("a.help").button({
        icons: {
            primary: 'ui-icon-help'
        }
    });
    $("a.exportar, a.download").button({
        icons: {
            primary: 'ui-icon-disk'
        }
    });
    $("a.descarregar").button({
        icons: {
            primary: 'ui-icon-circle-arrow-s'
        }
    });
    $("a.desativar").button({
        icons: {
            primary: 'ui-icon-minus'
        }
    });
    $("a.visualizar").button({
        icons:{
            primary: 'ui-icon-newwin'
        } 
    });
    $("input:submit, input:reset, a.button").button();
}
