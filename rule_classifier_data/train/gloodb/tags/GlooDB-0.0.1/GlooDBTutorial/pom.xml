	<parent>
		<artifactId>GlooDBParent</artifactId>
		<groupId>com.gloodb</groupId>
		<version>0.0.1</version>
	</parent>

	<profiles>
		<profile>
			<id>Memory</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<configuration>
							<systemPropertyVariables>
								<type>Memory</type>
							</systemPropertyVariables>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>File</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<configuration>
							<systemPropertyVariables>
								<type>Memory</type>
							</systemPropertyVariables>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

	<dependencies>
		<dependency>
			<groupId>com.gloodb</groupId>
			<artifactId>GlooDBApi</artifactId>
		</dependency>
		<dependency>
			<groupId>com.gloodb</groupId>
			<artifactId>GlooDBImpl</artifactId>
		</dependency>
		<dependency>
			<groupId>com.gloodb</groupId>
			<artifactId>GlooDBImplFile</artifactId>
		</dependency>
		<dependency>
			<groupId>com.gloodb</groupId>
			<artifactId>GlooDBImplMem</artifactId>
		</dependency>
	</dependencies>
