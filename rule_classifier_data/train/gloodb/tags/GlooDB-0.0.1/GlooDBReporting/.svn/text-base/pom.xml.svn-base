<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>GlooDBParent</artifactId>
		<groupId>com.gloodb</groupId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>
	<groupId>com.gloodb</groupId>
	<artifactId>GlooDBReporting</artifactId>
	<version>0.0.1</version>
	
	<profiles>
		<profile>
			<id>Memory</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<configuration>
							<systemPropertyVariables>
								<type>Memory</type>
							</systemPropertyVariables>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>File</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<configuration>
							<systemPropertyVariables>
								<type>Memory</type>
							</systemPropertyVariables>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
	
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
                                <version>1.5</version>
				<executions>
					<execution>
						<id>add-source</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>add-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>${basedir}/../GlooDBApi/src/main/java</source>
								<source>${basedir}/../GlooDBImpl/src/main/java</source>
								<source>${basedir}/../GlooDBImplFile/src/main/java</source>
								<source>${basedir}/../GlooDBImplMem/src/main/java</source>
								<source>${basedir}/../GlooDBEnterprise/src/main/java</source>
								<source>${basedir}/../GlooDBTutorial/src/main/java</source>
							</sources>
						</configuration>
					</execution>
					<execution>
						<id>add-test-source</id>
						<phase>generate-test-sources</phase>
						<goals>
							<goal>add-test-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>${basedir}/../GlooDBApi/src/test/java</source>
								<source>${basedir}/../GlooDBImpl/src/test/java</source>
								<source>${basedir}/../GlooDBImplFile/src/test/java</source>
								<source>${basedir}/../GlooDBImplMem/src/test/java</source>
								<source>${basedir}/../GlooDBEnterprise/src/test/java</source>
								<source>${basedir}/../GlooDBTutorial/src/test/java</source>
							</sources>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<reporting>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-report-plugin</artifactId>
				<configuration>
					<outputDirectory>${basedir}/target/site</outputDirectory>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>cobertura-maven-plugin</artifactId>
				<version>2.3</version>
				<configuration>
					<instrumentation>
						<excludes>
							<exclude>gloodb/**/*Exception.class</exclude>
						</excludes>
					</instrumentation>
					<outputDirectory>${basedir}/target/site</outputDirectory>
				</configuration>
			</plugin>
		</plugins>
	</reporting>
</project>