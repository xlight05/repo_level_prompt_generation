<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <include file="admin.xml"/>
    <include file="profesor.xml"/>
    <!-- Configuration for the default package. -->
    <package name="default" extends="struts-default">
        <action name="login">
            <result>/login.jsp</result>
        </action>
        <action name="login-check" class="bean.LoginBean">
            <result name="success" type="redirect">/admin/admin.action</result>
            <result name="login" type="redirect">/profesor/profesor.action</result>
            <result name="input">/login.jsp</result>
            <result name="error">/login.jsp</result>
        </action>
        <action name="menu" class="bean.LoginBean" method="tipoUsuarioActual">
            <result name="success">/admin/menu.jsp</result>
            <result name="login">/profesor/menu.jsp</result>
            <result name="error">/menu.jsp</result>
            
        </action>
        
    </package>
</struts>
