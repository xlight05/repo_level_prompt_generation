<?xml version="1.0" encoding="UTF-8"?>
<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	elementFormDefault="qualified"
	targetNamespace="http://seamlets.org/cms/template"
	xmlns:template="http://seamlets.org/cms/template"
	xmlns:components="http://jboss.com/products/seam/components"
	attributeFormDefault="unqualified">
	<xsd:import namespace="http://jboss.com/products/seam/components"
		schemaLocation="http://jboss.com/products/seam/components-2.1.xsd" />

	<xsd:element name="template" type="template:Template"></xsd:element>

	<xsd:complexType name="Template">
		<xsd:sequence>
			<xsd:element minOccurs="0" maxOccurs="unbounded"
				ref="components:property" />
			<xsd:element name="viewparts" type="template:ViewParts"
				maxOccurs="1" minOccurs="1">
			</xsd:element>
		</xsd:sequence>
		<xsd:attribute name="displayName" type="xsd:string"
			use="optional"/>
		<xsd:attribute name="importer" type="components:elType"
			use="required"/>
		<xsd:attribute name="confViewId" type="components:string"
			use="optional"/>
	</xsd:complexType>
	
	<xsd:complexType name="ViewParts">
		<xsd:sequence maxOccurs="unbounded" minOccurs="1">
			<xsd:element name="viewpart" type="template:ViewPart" maxOccurs="unbounded" minOccurs="1"></xsd:element>
		</xsd:sequence>
	</xsd:complexType>

	<xsd:complexType name="ViewPart">
		<xsd:attribute name="sortorder" type="xsd:int" use="required"></xsd:attribute>
		<xsd:attribute name="name" type="xsd:string" use="required"></xsd:attribute>
		<xsd:attribute name="contentrequired" type="xsd:boolean" use="optional"></xsd:attribute>
	</xsd:complexType>
</xsd:schema>