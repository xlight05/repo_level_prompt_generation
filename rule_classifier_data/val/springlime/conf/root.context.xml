	<bean class="com.lime.bean.ModularApplication" id="TestCssDescriptor">
		<!-- Application name -->
		<constructor-arg>
			<value>
				TestCss
   			</value>
		</constructor-arg>
		<!-- Application name -->
		<!-- Common context descriptors pattern  -->
		<constructor-arg>
			<value>
				conf/*context.xml
   			</value>
		</constructor-arg>
		<!-- Common context descriptors pattern  -->
		<!-- Module context descriptors pattern  -->
		<constructor-arg>
			<value>
				conf/*context.ext.xml
   			</value>
		</constructor-arg>
		<!-- Module context descriptors pattern  -->
		<!-- Required modules -->
		<constructor-arg>
			<list>
				<value>TestCssConsumer</value>
			</list>
		</constructor-arg>
		<!-- Required modules -->
		<!-- Optional modules -->
		<constructor-arg>
			<list>
				<value>TestCssModule</value>
			</list>
		</constructor-arg>
		<!-- Optional modules -->
	</bean>
   
