<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	
	<display-name>Tariff Invoice Generator</display-name>
	<context-param>
  		<param-name>jContenedorConfigurationLocation</param-name>
  		<param-value>classpath:META-INF/invoices/invoices-configuration.xml</param-value>
	</context-param>
	<listener>
		<listener-class>
			org.jsemantic.jcontenedor.configuration.web.JContenedorListener
		</listener-class>
	</listener>
	
	<servlet>
    	<servlet-name>dispatcher</servlet-name>
    	<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
   		<load-on-startup>1</load-on-startup>
   		 		
   		<init-param>
   			<param-name>contextAttribute</param-name>
   			<param-value>org.springframework.web.context.WebApplicationContext.ROOT</param-value>
   			<description></description>
   		</init-param>
	</servlet>
		
	<servlet-mapping>
    	<servlet-name>dispatcher</servlet-name>
    	<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>
			invoice.html
		</welcome-file>
	</welcome-file-list>
	
</web-app>
