<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean id="dbService" name="dbService" class="org.jsemantic.services.dbservice.impl.DBServerImpl" autowire="autodetect" lazy-init="true" scope="prototype"/>
	
	<bean id="dbServerConfiguration" class="org.jsemantic.services.dbservice.impl.DBServerConfiguration">
		<property name="dbPath" value="mem:test;sql.enforce_strict_size=true"/>
		<property name="driverClass" value="org.hsqldb.jdbcDriver"/>
		<property name="user" value="sa"/>
		<property name="password" value=""/>
	</bean>

</beans>
