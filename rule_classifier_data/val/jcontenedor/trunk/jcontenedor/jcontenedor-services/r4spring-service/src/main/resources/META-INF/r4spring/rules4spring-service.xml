<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
			
	<bean id="beanPostProcessor" class="org.jsemantic.services.r4spring.annotations.processor.SemanticSessionBeanPostProcessor"/>
	
	<bean id="semanticSessionFactory" 
		class="org.jsemantic.servicerules.drools.session.factory.SemanticSessionFactoryImpl" autowire="autodetect">
		<constructor-arg type="java.lang.String" value="${rules.rulefile}"/>	
	</bean>
	
</beans>





