/**
 * Contains common css which over-ride html tags that already exist.
 * Put application decorator level elements here.
 *
 * @author      Tin Pham
 * @version     1.0
 * @css level   (2 and W3C Compliant)
 */

a:hover {
	color: #E1080A;
	background: #FFFFAC;
}
 
body {
	margin-top: 0px;
	padding-top: 0px;
	margin-left: 0px;
	font: 80% sans-serif;
	background: #4b4b4d url(<%=request.getContextPath()%>/decorators/images/newTheme/bkgnd_pattern.png) ;
}

th {
	font: bold 84% sans-serif;	
}

td {
	font: 80% sans-serif;
}

img {
	border: none;
}

hr {
	height: 1px;
	color: #aaa;
	background-color: #aaa;
	border: 0;
	margin: .2em 0 .2em 0;
}

h1, h2, h3, h4, h5, h6 {
	color: black;
	background: none;
	font-weight: normal;
	margin: 0;
	padding-top: .5em;
	padding-bottom: .17em;
	border-bottom: 1px solid #aaa;
}
h1 { font-size: 188%; }
h2 { font-size: 150%; }
h3, h4, h5, h6 {
	border-bottom: none;
	font-weight: bold;
}
h3 { font-size: 132%; }
h4 { font-size: 116%; }
h5 { font-size: 100%; }
h6 { font-size: 80%;  }
