<?xml version="1.0" encoding="UTF-8"?>
<project name="tyrond" default="build">

	<property file="build.properties" />
	<property name="project.name" value="${ant.project.name}" />

	<property name="src.java.dir" value="src" />
	<property name="test.java.dir" value="test" />
	<property name="build.dir" value="build" />
	<property name="build.java.dir" value="build/classes/java" />
	<property name="build.classes.dir" value="build/classes" />
	<property name="extlib.dir" value="lib" />
	<!-- 定义类路径 -->
	<path id="project.classpath">
<!--
		<fileset dir="${extlib.dir}">
			<include name="*.jar" />
		</fileset>
-->
		<pathelement location="${build.java.dir}" />
	</path>

	<target name="init">
		<mkdir dir="${build.java.dir}" />
	</target>

	<target name="compile" depends="init">
		<javac destdir="${build.java.dir}" 
			debug="true" debuglevel="lines,source"
			encoding="UTF-8" source="1.5" target="1.5">
			<src path="${src.java.dir}" />
			<classpath refid="project.classpath" />
		</javac>
	</target>

	<target name="build" depends="compile">
		<copy todir="${build.java.dir}" preservelastmodified="true">
			<fileset dir="${src.java.dir}">
				<include name="**/*.*" />
				<exclude name="**/*.java" />
			</fileset>
		</copy>
	</target>

	<target name="rebuild" depends="clean-all,build" />
	<target name="jar" depends="build">
		<jar destfile="${build.dir}/${project.name}-${version}.jar" basedir="${build.java.dir}" >
<!--
			<manifest>
				<attribute name="Main-Class" value="com.chenlb.mmseg4j.example.Complex"/>
			</manifest>
-->
		</jar>
	</target>
	<target name="zip" depends="jar">
		<delete file="${build.dir}/${project.name}-${version}.zip"></delete>
	<!--
		<mkdir dir="temp-zip/lib"/>
		<copy todir="temp-zip/lib" preservelastmodified="true">
			<fileset dir="${build.dir}">
				<include name="${project.name}-${version}.jar"/>
			</fileset>
			<fileset dir="lib">
				<include name="*.jar"/>
			</fileset>
		</copy>
	-->
		<mkdir dir="temp-zip/src"/>
		<copy todir="temp-zip/src" preservelastmodified="true">
			<fileset dir="${src.java.dir}">
				<include name="**/*.*"/>
			</fileset>
		</copy>
		<mkdir dir="temp-zip/test"/>
		<copy todir="temp-zip/test" preservelastmodified="true">
			<fileset dir="${test.java.dir}">
				<include name="**/*.*"/>
			</fileset>
		</copy>
		<copy todir="temp-zip" preservelastmodified="true">
			<fileset dir=".">
				<include name="*.txt"/>
				<include name="build.*"/>
			</fileset>
			<fileset dir="${build.dir}">
				<include name="${project.name}-${version}.jar"/>
			</fileset>
		</copy>
		<zip destfile="${build.dir}/${project.name}-${version}.zip" basedir="temp-zip">
		</zip>
		<delete dir="temp-zip"></delete>
	</target>
	<target name="clean">
		<delete includeEmptyDirs="true">
			<fileset dir="${build.classes.dir}">
				<include name="**/*.class" />
			</fileset>
		</delete>
	</target>
	<target name="clean-all">
		<delete includeEmptyDirs="true" failonerror="off">
			<fileset dir="${build.dir}">
				<include name="**/*.*"/>
			</fileset>
			<fileset dir="${build.classes.dir}"></fileset>
		</delete>
	</target>
</project>
