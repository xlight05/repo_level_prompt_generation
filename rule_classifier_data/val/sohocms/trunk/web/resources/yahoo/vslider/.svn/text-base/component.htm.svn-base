<div id="${uuid}" class="slider">
    <div
     id="${uuid}_vertBGDiv"
     name="vertBGDiv"
     class="vertBGDiv"
     title="Vertical Slider">
       <div id="${uuid}_vertHandleDiv" class="vertHandleDiv"></div> 
    </div>

    <div id="${uuid}_vertValueDiv" class="vertValueDiv">
      <form name="formV" id="${uuid}_formV" onsubmit="return false;">
          <input name="vertVal" id="${uuid}_vertVal" type="text" value="0" size="4" maxlength="4" />
          <input id="${uuid}_vertButton" type="button" value="Update" />
      </form>
    </div>
</div>
